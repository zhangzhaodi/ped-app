.headerBox {
  position: absolute;
  z-index: 10000;
}
.outer {
  padding-bottom: px2vw(98);
}
.content {
  position: relative;
  .main {
    height: 100%;
  }
  .top {
    height: px2vw(490);
    overflow: hidden;
    background: linear-gradient(#ddab8e, #fbddc9);
    .text {
      margin: px2vw(148) auto px2vw(20);
      text-align: center;
      font-size: px2vw(26);
      font-weight: 400;
      color: #fff;
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;
      .iconfont {
        font-size: px2vw(14);
        // padding: px2vw(14);
        margin-left: px2vw(14);
        color: #fff;
      }
    }
    .money {
      text-align: center;
      font-size: px2vw(60);
      font-weight: 500;
      color: #fff;
      line-height: 60px;
    }
  }
  .option {
    width: 100%;
    height: px2vw(191);
    margin: 0 auto;
    margin-top: px2vw(-166);
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%);
    .optionContent {
      background-color: #fff;
      box-shadow: 0px px2vw(2) px2vw(20) 0px rgba(168, 168, 168, 0.1);
      border-radius: px2vw(16);
      width: px2vw(670);
      height: px2vw(128);
      position: relative;
      z-index: 100;
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      .item {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        img {
          width: px2vw(48);
          height: px2vw(48);
        }
        span {
          font-size: px2vw(24);
          font-family: PingFangSC;
          font-weight: 400;
          color: rgba(38, 38, 38, 1);
          line-height: px2vw(24);
          margin-top: px2vw(13);
        }
      }
    }
  }
}
.product {
  .item {
    position: relative;
  }
  .item:not(:first-child)::after {
    content: " ";
    position: absolute;
    left: px2vw(40);
    right: px2vw(40);
    height: px2vw(1);
    top: px2vw(0);
    border-top: px2vw(1) solid #eff0f1;
  }
}
