<script>
import Header from "@/components/Header/Header.vue";
import dayjs from 'dayjs';
import Scroller from "@/components/Scroller.vue";
import { mapGetters, mapActions, mapState, mapMutations } from "vuex";
import { Button } from "vant";
export default {
  components: {
    Myheader: Header,
    [Button.name]: Button,
    Scroller
  },
  data() {
    return {
      headerParams: {
        leftShow: false,
        rightShow: true
      },
    };

  },
  computed: {
    ...mapState('fund', ['selectFund']),
    buyDate() {
      return dayjs().format("YYYY-MM-DD")
    },
    confirmDate() {
      let date = dayjs().add(1, 'd').format("MM-DD");
      let week = dayjs().add(1, 'd').day();
      let weekTxt = this.getWeek(week);
      return `${date} (${weekTxt})`
    },
    profitDate() {
      let date = dayjs().add(3, 'd').format("MM-DD");
      let week = dayjs().add(3, 'd').day();
      let weekTxt = this.getWeek(week);
      return `${date} ${weekTxt}`
    }
  },
  created() {
  },
  methods: {
    getWeek(week) {
      let weekTxt = '';
      switch (week) {
        case 1:
          weekTxt = '周一';
          break
        case 2:
          weekTxt = '周二';
          break
        case 3:
          weekTxt = '周三';
          break
        case 4:
          weekTxt = '周四';
          break
        case 5:
          weekTxt = '周五';
          break
        case 6:
          weekTxt = '周六';
          break
        case 7:
          weekTxt = '周日';
          break
        default:
          weekTxt = ''
      }
      return weekTxt
    },
    final() {
      this.$router.replace({ name: "fund" });
    },
    again() {
      this.$router.replace({ name: "fund" });
    }
  }
};
</script>

